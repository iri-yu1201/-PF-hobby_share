<h1>投稿</h1>

<div class="container">
  <div class="row">
  <%= form_with model: @item, local:true do |f| %>
    <%= f.attachment_field :photo %>
    <%= f.label :タイトル %>
    <%= f.text_field :title %>
    <%= f.label :紹介する %>
    <%= f.text_area :detail %>
    <%= f.submit "シェアする", class: "btn btn-success" %>
  <% end %>
  </div>
</div>
