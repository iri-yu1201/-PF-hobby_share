<div class="container">
  <table>
  <% @items.each do |item| %>
    <tr>
      <td>
      <%= link_to user_path(item.user.id) do %>
        <%= attachment_image_tag item.user, :image, :fill, 50, 50, format:'jpeg', fallback: "no_image.jpg"%><br>
        <%= item.user.name %>
      <% end %>
      </td>
      <td>
      <%= link_to item_path(item) do %>
        <%= item.title %>
      <% end %>
      <%= item.detail %>
      </td>
      <td><%= attachment_image_tag item, :photo, :fill, 200, 150, format:'jpeg' %></td>
    </tr>
  <% end %>
  </table>
</div>