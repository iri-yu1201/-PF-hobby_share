<div class="container-md">
  <div class="row">
    <table class="table">
    <% @items.each do |item| %>
      <tr>
        <td class="icon">
        <%= link_to user_path(item.user.id) do %>
          <%= attachment_image_tag item.user, :image, :fill, 70, 70, format:'jpeg', fallback: "no_image.jpg" %><br>
          <div>
            <%= item.user.name %>
          </div>
        <% end %>
        </td>
        <td>
        <%= link_to item_path(item) do %>
          <div class="post">
            <%= item.title %>
          </div>
        <% end %><br>
          <div class="detail">
            <%= item.detail %>
          </div>
        </td>
        <td><%= attachment_image_tag item, :photo, :fill, 200, 150, format:'jpeg', fallback: "no_photo.jpg" %></td>
      </tr>
    <% end %>

    </table>
  </div>
  <%= paginate @items %>
</div>

