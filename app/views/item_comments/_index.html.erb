              <% end %>
            <% end %>
            <span class="comment-date pull-right">
              <%= item_comment.created_at.strftime('%Y%m%d %H%M%S') %>
            </span>
          </div>
        </div>
      </li>
    <% end %>
  <% end %>
</div>