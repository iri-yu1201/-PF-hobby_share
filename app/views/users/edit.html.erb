<h1>プロフィールを変更</h1>

<%= form_with model: @user, local:true do |f| %>
  <table>
    <tr>
      <td>プロフィール画像</td>
      <td><%= f.attachment_field :image %></td>
    </tr>
    <tr>
      <td>ハンドルネーム</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>自己紹介</td>
      <td><%= f.text_area :introduction %></td>
    </tr>
  </table>
  <%= f.submit "保存する", class: "btn btn-success" %>
<% end %>