<div class="container-md">
  <h2 class="title">フォロワー一覧</h2>
  <div class="row">
    <div class="col-8 offset-2">
    <% if @users.exists? %>
      <table class="table table-striped table-hover">
        <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :image, :fill, 60, 60, format:'jpeg', fallback: "no_image.jpg"%></td>
          <td class="name"><%= user.name %></td>
          <td><%= link_to "見に行く", user_path(user), class: "btn btn-outline-secondary" %></td>
        </tr>
        <% end %>
      </table>
    <% else %>
      <p class="not_exist">フォロワーはいません</p>
    <% end %>
    </div>
  </div>
</div>